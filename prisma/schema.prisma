generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Drink {
  id                String              @id @default(auto()) @map("_id") @db.ObjectId
  name              String              @unique
  method            String
  cover             String              @default("")
  thumbnail         String              @default("")
  ingredients       DrinkIngredient[]   
  created_at        DateTime            @default(now())

  @@map("drinks")
}

type DrinkIngredient {
    ingredientId    String  @db.ObjectId
    quantity        Float
}


model Ingredient {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  name            String    @unique
  unity           String
  category        String
  isAlcoholic     Boolean
  colorTheme      String
  created_at      DateTime  @default(now())

  @@map("ingredients")
}

model User {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  name            String    
  surname         String    
  email           String    @unique
  password        String
  created_at      DateTime  @default(now())

  @@map("users")
}

model UserToken {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  user_id         String    
  refresh_token   String    @unique   
  expires_date    DateTime
  created_at      DateTime  @default(now())

  @@map("users_tokens")
}