{
	"name": "drunk-flavor-back",
	"version": "0.0.1",
	"description": "",
	"main": "server.ts",
	"type": "commonjs",
	"scripts": {
		"format": "prettier --write 'src/**/*.ts'",
		"format:staged": "pretty-quick --staged",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"lint:staged": "lint-staged",
		"prepare": "husky",
		"clean": "rm -Rf dist",
		"start": "NODE_ENV=production node dist/server.js",
		"dev": "tsx src/server.ts",
		"dev:watch": "tsx watch src/server.ts",
		"build": "tsup src/server.ts",
		"test": "NODE_ENV=testing vitest run -c vitest.config.mts",
		"test:watch": "NODE_ENV=testing vitest -c vitest.config.mts",
		"test:coverage": "vitest run -c vitest.config.mts --coverage",
		"test:e2e:setup": "npm link ./src/infrastructure/mongo/vitest-environment-mongo",
		"test:e2e": "NODE_ENV=e2e dotenv -e .env.testing -- vitest run -c vitest-e2e.config.mts",
		"test:e2e:watch": "NODE_ENV=e2e dotenv -e .env.testing -- vitest -c vitest-e2e.config.mts",
		"test:template": "NODE_ENV=testing vitest run -c vitest.config.mts 'src/shared/providers/template/implementations/views/'",
		"test:template:watch": "NODE_ENV=testing vitest -c vitest.config.mts 'src/shared/providers/template/implementations/views/'",
		"test:template:output": "NODE_ENV=testing STORE_TEMPLATES=true vitest run -c vitest.config.mts 'src/shared/providers/template/implementations/views/'",
		"test:template:output:watch": "NODE_ENV=testing STORE_TEMPLATES=true vitest -c vitest.config.mts 'src/shared/providers/template/implementations/views/'",
		"generate-secret-key": "npx @fastify/secure-session > secret-key"
	},
	"dependencies": {
		"@aws-sdk/client-s3": "3.666.0",
		"@fastify/cookie": "10.0.1",
		"@fastify/cors": "10.0.1",
		"@fastify/helmet": "12.0.1",
		"@fastify/jwt": "9.0.1",
		"@fastify/multipart": "9.0.1",
		"@fastify/secure-session": "8.1.0",
		"@fastify/static": "8.0.1",
		"@fastify/swagger": "9.1.0",
		"@fastify/swagger-ui": "5.0.1",
		"bcrypt": "5.1.1",
		"dayjs": "1.11.13",
		"dotenv": "16.4.5",
		"fastify": "5.0.0",
		"fastify-type-provider-zod": "4.0.2",
		"mongodb": "6.9.0",
		"mongoose": "8.7.0",
		"pino": "9.4.0",
		"pino-http": "10.3.0",
		"pino-pretty": "11.2.2",
		"ts-pattern": "5.4.0",
		"zod": "3.23.8"
	},
	"devDependencies": {
		"@types/bcrypt": "5.0.2",
		"@types/mjml": "4.7.4",
		"@types/nodemailer": "6.4.16",
		"@types/node": "20.16.11",
		"@types/supertest": "6.0.2",
		"dotenv-cli": "7.4.2",
		"eslint": "9.12.0",
		"eslint-config-prettier": "9.1.0",
		"@vitest/eslint-plugin": "1.1.7",
		"husky": "9.1.6",
		"lint-staged": "15.2.10",
		"mongodb-memory-server": "10.0.1",
		"prettier": "3.3.3",
		"pretty-quick": "4.0.0",
		"supertest": "7.0.0",
		"tsup": "8.3.0",
		"tsx": "4.19.1",
		"typescript": "5.6.2",
		"typescript-eslint": "8.8.1",
		"vite-tsconfig-paths": "5.0.1",
		"vitest": "2.1.2"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/juanlessa/drunk-fastify.git"
	},
	"engines": {
		"node": ">=20.0.0"
	},
	"author": "Juan Lessa",
	"license": "ISC",
	"homepage": "https://github.com/juanlessa/drunk-fastify#readme",
	"bugs": {
		"url": "https://github.com/juanlessa/drunk-fastify/issues"
	},
	"keywords": [
