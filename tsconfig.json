{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 20",
    "_version": "20.1.0",

    "compilerOptions": {
      "lib": ["es2023"],
      "module": "ESNext",
      "moduleResolution": "Node",
      "target": "es2022",
      "declaration": true,
      "allowJs": true,
      "strict": true,
      "strictNullChecks": true,
      "esModuleInterop": true,
      "skipLibCheck": false,
      "forceConsistentCasingInFileNames": true,
      "allowSyntheticDefaultImports": true,
      "importHelpers": true,
      "outDir": "build",
      "sourceMap": true,
      "typeRoots": [
        "./node_modules/@types"
      ],
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "baseUrl": "./",                                     /* Specify the base directory to resolve non-relative module names. */
      "paths": {
        "@/*": ["./src/*"]
      },   
	},
  "include": [
    "src/**/*",
    ".eslintrc.cjs",
    ".eslintignore",
    ".prettierrc.cjs",
    "vitest.config.ts",
  ],
	"exclude": ["node_modules", "build", "docs", "infra"],
}
